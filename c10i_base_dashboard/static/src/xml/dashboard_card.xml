<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="c10i_base_dashboard.ChartCard">
        <div class="o_dashboard_card o_chart_card">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title" t-esc="widget.options.title or 'Chart'"/>
                </div>
                <div class="card-body">
                    <canvas t-att-id="widget.options.canvas_id" style="width:100%;height:300px;"></canvas>
                </div>
            </div>
        </div>
    </t>

    <t t-name="c10i_base_dashboard.StatusCard">
        <div class="o_dashboard_card o_status_card">
            <div class="card h-100">
                <div class="status-card-content card-body d-flex p-3">
                    <div class="status-icon-container d-flex align-items-center justify-content-center me-3">
                        <i t-if="widget.icon" t-attf-class="status-icon fa {{widget.icon || 'fa-file'}} fa-2x text-white"></i>
                    </div>
                    <div class="status-content flex-grow-1 pl-3">
                        <h6 class="status-title text-dark mb-1 font-weight-bold" t-esc="widget.title"/>
                        <h3 class="status-count text-primary font-weight-bold mb-1" t-esc="widget.count"/>
                        <p class="status-subtitle text-muted small" t-esc="widget.subtitle"/>
                    </div>
                </div>
            </div>
        </div>
    </t>


                                                </t>
                                                <t t-elif="column.type == 'date'">
                                                    <span t-esc="item[column.field]"/>
                                                </t>
                                                <t t-elif="column.type == 'currency'">
                                                    <span t-esc="item.currency_symbol"/><span t-esc="item[column.field]"/>
                                                </t>
                                                <t t-else="">

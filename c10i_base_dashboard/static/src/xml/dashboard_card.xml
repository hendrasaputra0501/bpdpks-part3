    </t>

    <t t-name="c10i_base_dashboard.ListCardItem">
        <tr class="list-item" t-att-data-id="widget.item.id">
            <t t-foreach="widget.columns" t-as="column">
                <td t-att-class="'text-' + (column.align || 'left')">
                    <!-- Hierarchy indentation and toggle -->
                    <t t-if="column_index == 0 and widget.item.level !== undefined">
                        <span t-att-style="'padding-left: ' + (widget.item.level * 20) + 'px;'">
                            <button t-if="widget.item.children and widget.item.children.length" 
                                    class="btn btn-sm btn-link hierarchy-toggle p-0 me-1"
                                    t-att-data-id="widget.item.id">
                                <i class="fa fa-plus"></i>
                            </button>
                            <span t-else="" class="hierarchy-spacer me-3"></span>
                        </span>
                    </t>
                    
                    <!-- Cell content -->
                    <t t-if="column.type == 'badge'">
                        <span t-att-class="'badge badge-' + (widget.item[column.field + '_color'] || 'secondary')" 
                                t-esc="widget.item[column.field]"/>
                    </t>
                    <t t-elif="column.type == 'date'">
                        <span t-esc="widget.item[column.field]"/>
                    </t>
                    <t t-elif="column.type == 'currency'">
                        <span t-esc="widget.item.currency_symbol"/><span t-esc="widget.item[column.field]"/>
                    </t>
                    <t t-else="">
                        <span t-esc="widget.item[column.field]"/>
                    </t>
                </td>
            </t>
            
            <!-- Action Column with Eye Icon -->
            <td class="text-center" t-if="widget.onItemClick">
                <button class="btn btn-sm btn-outline-secondary list-item-action" type="button" title="View Details">
                    <i class="fa fa-eye"></i>
                </button>
            </td>
        </tr>
    </t>

    <!-- KPI Card Template -->
    <t t-name="c10i_base_dashboard.KpiCard">
        <div class="o_dashboard_card o_kpi_card">
            <div t-attf-class="card shadow-sm h-100 kpi-card border-#{widget.headerColor}">
                <!-- Card Header -->
                <div t-attf-class="card-header bg-#{widget.headerColor} text-white d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i t-attf-class="fa #{widget.icon} me-2"></i>
                        <span class="fw-bold"><t t-esc="widget.title"/></span>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body kpi-card-content d-flex flex-column justify-content-center text-center" style="cursor: pointer;">
                    <!-- Header Label -->
                    <div t-if="widget.header" class="kpi-header mb-2">
                        <h6 class="text-muted mb-0"><t t-esc="widget.header"/></h6>
                    </div>

                    <!-- Main KPI Value -->
                    <div class="kpi-main-value mb-3">
                        <h1 t-attf-class="display-4 fw-bold mb-0 text-#{widget.targetValue > 0 ? (widget.trendLabel === 'up' ? 'success' : widget.trendLabel === 'down' ? 'danger' : 'primary') : 'primary'}">
                            <t t-esc="widget.actualLabel"/>
                        </h1>
                    </div>

                    <!-- Target and Percentage (only show if target > 0) -->
                    <div t-if="widget.target and widget.targetValue > 0" class="kpi-target-section mb-2">
                        <div class="row">
                            <div class="col-6">
                                <div class="kpi-target">
                                    <span class="text-muted small">Target</span>
                                    <div class="fw-bold text-dark">
                                        <t t-esc="widget.targetLabel || widget._formatNumber(widget.targetValue)"/>
                                    </div>
                                </div>
                            </div>
                            <div t-if="widget.percentage" class="col-6">
                                <div class="kpi-percentage">
                                    <span class="text-muted small">Achievement</span>
                                    <div t-attf-class="fw-bold text-#{widget.trendLabel === 'up' ? 'success' : widget.trendLabel === 'down' ? 'danger' : 'warning'}">
                                        <t t-esc="widget.percentageValue"/>%
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Trend Indicator (only show if target > 0) -->
                    <div t-if="widget.target and widget.trend" class="kpi-trend mb-2">
                        <i t-if="widget.trendLabel === 'up'" class="fa fa-arrow-up text-success"></i>
                        <i t-if="widget.trendLabel === 'down'" class="fa fa-arrow-down text-danger"></i>
                        <i t-if="widget.trendLabel === 'neutral'" class="fa fa-minus text-warning"></i>
                        <span t-attf-class="ms-1 small text-#{widget.trendLabel === 'up' ? 'success' : widget.trendLabel === 'down' ? 'danger' : 'warning'}">
                            <t t-if="widget.trendLabel === 'up'">Above Target</t>
                            <t t-if="widget.trendLabel === 'down'">Below Target</t>
                            <t t-if="widget.trendLabel === 'neutral'">On Track</t>
                        </span>
                    </div>

                    <!-- Footer Label -->
                    <div t-if="widget.footer" class="kpi-footer mt-auto">
                        <small class="text-muted"><t t-esc="widget.footer"/></small>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <!-- Map Card Template -->
    <t t-name="c10i_base_dashboard.MapCard">
        <div class="o_dashboard_card o_map_card">
            <div t-attf-class="card shadow-sm h-100 border-#{widget.headerColor}">
                <!-- Card Header -->
                <div t-attf-class="card-header bg-#{widget.headerColor} text-white d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i t-attf-class="fa #{widget.icon} me-2"></i>
                        <span class="fw-bold"><t t-esc="widget.title"/></span>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-0" style="position: relative; min-height: 400px;">
                    <!-- Loading Indicator -->
                    <!-- <div class="map-loading text-center p-4" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading map data...</p>
                    </div> -->

                    <!-- Map Container -->
                    <div class="map-container" style="height: 400px; position: relative;">
                        <div class="map-element" style="width: 100%; height: 100%;"></div>
                        
                        <!-- Data Details Panel -->
                        <div class="data-details-panel" style="display: none; position: absolute; top: 10px; right: 10px; width: 300px; max-height: 350px; background: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); z-index: 1000;">
                            <div class="data-panel-header" style="padding: 10px 15px; border-bottom: 1px solid #e9ecef;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 fw-bold">
                                        <span class="panel-title">Items at Location</span>
                                    </h6>
                                    <button type="button" class="btn-close close-data-panel" aria-label="Close"></button>
                                </div>
                            </div>
                            <div class="data-list" style="max-height: 280px; overflow-y: auto; padding: 10px;">
                                <!-- Data items will be dynamically inserted here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
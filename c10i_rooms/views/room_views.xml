<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="room_room_view_tree" model="ir.ui.view">
        <field name="name">room.room.view.tree</field>
        <field name="model">room.room</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="is_available" string="Is Currently Available"/>
                <field name="next_booking_start"/>
            </tree>
        </field>
    </record>

    <record id="room_room_view_form" model="ir.ui.view">
        <field name="name">room.room.view.form</field>
        <field name="model">room.room</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group string="Room Information">
                            <field name="name"/>
                            <field name="short_code"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group string="Booking Information">
                            <field name="room_booking_url" readonly="1"/>
                            <field name="room_booking_image" widget="image"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Booking Details">
                            <field name="room_booking_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="start_datetime"/>
                                    <field name="stop_datetime"/>
                                    <field name="organizer_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Amenities">
                            <field name="description" help="Room amenities and features"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="room_room_view_kanban" model="ir.ui.view">
        <field name="name">room.room.view.kanban</field>
        <field name="model">room.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="is_available"/>
                <field name="next_booking_start"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">

                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>

                                <div class="mt8" t-if="record.active.raw_value">
                                    <span t-att-class="'badge ' + (record.is_available.raw_value ? 'badge-success' : 'badge-danger')">
                                        <t t-if="record.is_available.raw_value">Available</t>
                                        <t t-else="">Busy</t>
                                    </span>

                                    <span t-if="record.next_booking_start.raw_value" class="ml8">
                                        â€¢ Until <field name="next_booking_start"/>
                                    </span>
                                </div>

                                <div t-if="!record.active.raw_value" class="mt8">
                                    <span class="badge">Archived</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="room_room_action" model="ir.actions.act_window">
        <field name="name">Room</field>
        <field name="res_model">room.room</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create Rooms
            </p>
            <p>
                They can then be booked for meetings from a Tablet or the back-end.
            </p>
        </field>
    </record>

</odoo>

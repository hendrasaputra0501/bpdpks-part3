<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="journal_dashboard_view2_inherit" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban2.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@name="bank_cash_commands"]' position="after">
                <div t-if="journal_type == 'bank' and dashboard.bank_statements_source == 'bpdpks_mt940_portal'">
                    <a type="object" name="bank_statement_status">Bank Statement Api Status</a>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

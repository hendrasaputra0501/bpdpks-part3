<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="audit_document_request_view_tree" model="ir.ui.view">
        <field name="name">audit.document.request.view.tree</field>
        <field name="model">audit.document.request</field>
        <field name="arch" type="xml">
            <tree string="Permintaan Dokumen">
                <field name="audit_id" />
                <field name="name" />
                <field name="request_date" />
                <field name="due_date" />
                <field name="division_id" />
                <field name="state" widget="badge" decoration-warning="state == 'belum_terpenuhi'" decoration-success="state == 'diserahkan'" decoration-info="state == 'sudah_terpenuhi'" decoration-danger="state == 'ditolak'" />
            </tree>
        </field>
    </record>

    <record id="audit_document_request_view_form" model="ir.ui.view">
        <field name="name">audit.document.request.view.form</field>
        <field name="model">audit.document.request</field>
        <field name="arch" type="xml">
            <form string="Permintaan Dokumen">
                <header>
                    <button name="action_submit" type="object" string="submit" states="draft" class="oe_highlight" groups="base.group_user"/>
                    <button name="action_belum_terpenuhi" type="object" string="Belum Terpenuhi" states="submit" class="oe_highlight" groups="c10i_audit.group_audit_spi"/>
                    <button name="action_sudah_terpenuhi" type="object" string="Sudah Terpenuhi" states="submit,belum_terpenuhi,ditolak" class="btn-primary" groups="c10i_audit.group_audit_spi"/>
                    <button name="action_diserahkan" type="object" string="DISERAHKAN" states="sudah_terpenuhi" class="btn-success" groups="c10i_audit.group_audit_spi"/>
                    <button name="action_ditolak" type="object" string="TOLAK" states="belum_terpenuhi,sudah_terpenuhi" class="btn-danger" groups="c10i_audit.group_audit_spi"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,belum_terpenuhi,submit,sudah_terpenuhi,diserahkan,ditolak"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="c10i_audit.group_audit_spi">
                        <button name="action_open_activity_attachments"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-paperclip">
                            <field name="message_attachment_count" widget="statinfo" string="Dokumen Activity"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="audit_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="audit" string="Deskripsi Dokumen">
                            <field name="name"/>
                        </group>
                        <group name="tanggal" string="Informasi Tanggal">
                            <field name="request_date"/>
                            <field name="due_date"/>
                        </group>
                        <group name="devisi" string="Devisi Terkait">
                            <field name="division_id"/>
                        </group>
                    </group>
                    <group name="dokument" string="Dokument">
                        <field name="document_file" filename="document_filename"/>
                    </group>
                    <notebook>
                        <page name="note" string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Form yang muncul di audit.audit -->
    <record id="audit_document_request_view_form2" model="ir.ui.view">
        <field name="name">audit.document.request.view.form</field>
        <field name="model">audit.document.request</field>
        <field name="arch" type="xml">
            <form string="Permintaan Dokumen">
                <sheet>
                    <group>
                        <group name="audit" string="Deskripsi Dokumen">
                            <field name="name"/>
                        </group>
                        <group name="tanggal" string="Informasi Tanggal">
                            <field name="request_date"/>
                            <field name="due_date"/>
                        </group>
                        <group name="devisi" string="Devisi Terkait">
                            <field name="division_id"/>
                        </group>
                    </group>
                    <group name="dokument" string="Dokument">
                        <field name="document_file" filename="document_filename"/>
                    </group>
                    <notebook>
                        <page name="note" string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_audit_document_request_search" model="ir.ui.view">
        <field name="name">audit.document.request.search</field>
        <field name="model">audit.document.request</field>
        <field name="arch" type="xml">
            <search string="Cari Permintaan Dokumen">
                <field name="name" string="Nama Dokumen"/>
                <field name="audit_id" string="Audit"/>
                <field name="division_id" string="Divisi Teknis"/>
                <field name="request_date" string="Tanggal Permintaan"/>
                <field name="due_date" string="Tanggal Jatuh Tempo"/>
                <field name="state" string="Status"/>

                <filter string="Belum Terpenuhi" name="filter_belum_terpenuhi" domain="[('state','=','belum_terpenuhi')]"/>
                <filter string="Sudah Terpenuhi" name="filter_sudah_terpenuhi" domain="[('state','=','sudah_terpenuhi')]"/>
                <filter string="Diserahkan ke Auditor" name="filter_diserahkan" domain="[('state','=','diserahkan')]"/>
                <filter string="Ditolak" name="filter_ditolak" domain="[('state','=','ditolak')]"/>

                <group expand="0" string="Group By">
                    <filter string="Audit" name="group_audit" context="{'group_by':'audit_id'}"/>
                    <filter string="Divisi Teknis" name="group_divisi" context="{'group_by':'division_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Tanggal Permintaan" name="group_tanggal" context="{'group_by':'request_date'}"/>
                </group>

                <filter string="Tanggal Permintaan" name="filter_request_date" date="request_date"/>
            </search>
        </field>
    </record>


    <record id="action_audit_document_request" model="ir.actions.act_window">
        <field name="name">Permintaan Dokumen</field>
        <field name="res_model">audit.document.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_devisi_id': uid}</field>
        <field name="search_view_id" ref="c10i_audit.view_audit_document_request_search"/>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_audit_findings_tree" model="ir.ui.view">
        <field name="name">audit.findings.view.tree</field>
        <field name="model">audit.findings</field>
        <field name="arch" type="xml">
            <tree string="Rekomendasi">
                <field name="audit_id"/>
                <field name="name"/>
                <field name="recommendation_title"/>
                <field name="recommendation_date"/>
                <field name="date_received"/>
                <field name="date_closed"/>
                <field name="division_id"/>
                <field name="state" widget="badge" decoration-warning="state == 'proses'" decoration-success="state == 'selesai_bpdp'" decoration-info="state == 'closed'"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_findings_form" model="ir.ui.view">
        <field name="name">audit.findings.view.form</field>
        <field name="model">audit.findings</field>
        <field name="arch" type="xml">
            <form string="Rekomendasi">
                <header>
                    <button name="action_proses" 
                            string="Proses" 
                            type="object" 
                            states="draft,closed" 
                            class="oe_highlight" 
                            groups="c10i_audit.group_audit_teknis"/>
                    <button name="action_selesai_bpdp" 
                            string="Verifikasi" 
                            type="object" 
                            states="proses" 
                            class="oe_highlight" 
                            groups="c10i_audit.group_audit_spi"/>
                    <button name="action_closed" 
                            string="Closed" 
                            type="object" 
                            states="selesai_bpdp" 
                            class="btn-success" 
                            groups="c10i_audit.group_audit_spi"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,proses,selesai_bpdp,closed"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="audit_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informasi Rekomendasi">
                            <field name="name"/>
                            <field name="recommendation_title"/>
                            <field name="recommendation_date"/>
                            <field name="date_received"/>
                        </group>
                        <group string="Tanggal Rekomendasi Selesai">
                            <field name="date_closed" readonly="1" />
                            <field name="date_done_bpdp" readonly="1"/>
                        </group>
                        <group string="Devisi Terkait">
                            <field name="division_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Keterangan Temuan">
                            <group>
                                <field name="condition"/>
                                <field name="criteria"/>
                                <field name="cause"/>
                                <field name="effect"/>
                            </group>
                        </page>

                        <page string="Tanggapan Auditee">
                            <group>
                                <field name="response"/>
                                <field name="contra_response"/>
                            </group>
                        </page>
                        <page string="Catatan Meeting">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tampilan form pada menu audit.audit -->
    <record id="view_audit_findings_form2" model="ir.ui.view">
        <field name="name">audit.findings.view.form</field>
        <field name="model">audit.findings</field>
        <field name="arch" type="xml">
            <form string="Rekomendasi">
                <sheet>
                    <group>
                        <group string="Informasi Rekomendasi">
                            <field name="name"/>
                            <field name="recommendation_title"/>
                            <field name="recommendation_date"/>
                            <field name="date_received"/>
                        </group>
                        <group string="Tanggal Rekomendasi Selesai">
                            <field name="date_closed" readonly="1" />
                            <field name="date_done_bpdp" readonly="1"/>
                        </group>
                        <group string="Devisi Terkait">
                            <field name="division_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Keterangan Temuan">
                            <group>
                                <field name="condition"/>
                                <field name="criteria"/>
                                <field name="cause"/>
                                <field name="effect"/>
                            </group>
                        </page>

                        <page string="Tanggapan Auditee">
                            <group>
                                <field name="response"/>
                                <field name="contra_response"/>
                            </group>
                        </page>
                        <page string="Catatan Meeting">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_audit_findings" model="ir.actions.act_window">
        <field name="name">Rekomendasi</field>
        <field name="res_model">audit.findings</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tidak ada rekomendasi untuk ditampilkan.
            </p>
            <p>Klik tombol <b>Buat</b> untuk menambahkan rekomendasi baru.</p>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<templates>
    <div t-name="c10i_purchase_dashboard.Dashboard" class="o_purchase_dashboard">
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Purchase Dashboard</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <!-- Period Filter -->
                            <div class="col-md-2">
                                <label class="form-label">Period</label>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle w-100 js_foldable_trigger" type="button" data-filter="period">
                                        <span class="period-display">This Month</span>
                                    </button>
                                    <div class="dropdown-menu o_foldable_menu w-100" data-filter="period">
                                        <div class="p-3">
                                            <div class="row">
                                                <div class="col-12 mb-2">
                                                    <div class="btn-group-vertical w-100" role="group">
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="today">Today</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="this_week">This Week</button>
                                                        <button type="button" class="btn btn-primary js_date_filter selected" data-filter="this_month">This Month</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="this_quarter">This Quarter</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="this_year">This Year</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="last_month">Last Month</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="last_6_months">Last 6 Months</button>
                                                        <button type="button" class="btn btn-outline-secondary js_date_filter" data-filter="custom">Custom Range</button>
                                                    </div>
                                                </div>
                                                <div class="col-12 custom-date-range" style="display: none;">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label>From</label>
                                                            <div class="js_account_reports_datetimepicker">
                                                                <input type="text" class="form-control o_datepicker_input" name="date_from"/>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <label>To</label>
                                                            <div class="js_account_reports_datetimepicker">
                                                                <input type="text" class="form-control o_datepicker_input" name="date_to"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Vendor Filter (Many2One) -->
                            <div class="col-md-3">
                                <label class="form-label">Vendors</label>
                                <div class="js_vendor_m2m p-3"></div>
                            </div>
                            <!-- Product Categories Filter (Many2Many) -->
                            <div class="col-md-3">
                                <label class="form-label">Product Categories</label>
                                <div class="js_category_m2m p-3"></div>
                            </div>
                            <!-- Products Filter (Many2Many) -->
                            <div class="col-md-3">
                                <label class="form-label">Products</label>
                                <div class="js_products_m2m p-3"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Cards Section -->
        <div class="dashboard-separator" data-section="status">
            <div class="separator-header">
                <h5 class="separator-title">
                    <i class="fa fa-chart-line me-2"></i>
                    Key Performance Indicators
                </h5>
                <button class="btn btn-sm btn-outline-secondary separator-toggle" type="button">
                    <i class="fa fa-chevron-down"></i>
                </button>
            </div>
        </div>
        
        <!-- Status Cards Row -->
        <div class="row mb-4 dashboard-section" data-section="status">
            <div class="col-lg-3 mb-3">
                <div id="status_card_rfq"></div>
            </div>
            <div class="col-lg-3 mb-3">
                <div id="status_card_purchase"></div>
            </div>
            <div class="col-lg-6 mb-3">
                <div id="kpi_card_container"></div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="dashboard-separator" data-section="charts">
            <div class="separator-header">
                <h5 class="separator-title">
                    <i class="fa fa-chart-pie me-2"></i>
                    Analytics Charts
                </h5>
                <button class="btn btn-sm btn-outline-secondary separator-toggle" type="button">
                    <i class="fa fa-chevron-down"></i>
                </button>
            </div>
        </div>
        
        <!-- Charts Container -->
        <div class="row dashboard-section" data-section="charts">
            <div class="col-lg-6 mb-4">
                <div id="chart_container_1"></div>
            </div>
            <div class="col-lg-6 mb-4">
                <div id="chart_container_2"></div>
            </div>
        </div>
        <div class="row dashboard-section" data-section="charts">
            <div class="col-lg-6 mb-4">
                <div id="chart_container_3"></div>
            </div>
            <div class="col-lg-6 mb-4">
                <div id="chart_container_4"></div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="dashboard-separator" data-section="maps">
            <div class="separator-header">
                <h5 class="separator-title">
                    <i class="fa fa-map me-2"></i>
                    Geographic Data
                </h5>
                <button class="btn btn-sm btn-outline-secondary separator-toggle" type="button">
                    <i class="fa fa-chevron-down"></i>
                </button>
            </div>
        </div>
        
        <!-- Map Container -->
        <div class="row mb-4 dashboard-section" data-section="maps">
            <div class="col-lg-12 mb-4">
                <div id="map_container_1"></div>
            </div>
        </div>

        <!-- List Cards Section -->
        <div class="dashboard-separator" data-section="lists">
            <div class="separator-header">
                <h5 class="separator-title">
                    <i class="fa fa-list-ul me-2"></i>
                    Data Lists
                </h5>
                <button class="btn btn-sm btn-outline-secondary separator-toggle" type="button">
                    <i class="fa fa-chevron-down"></i>
                </button>
            </div>
        </div>
        
        <!-- List Cards Container -->
        <div class="row mb-4 dashboard-section" data-section="lists">
            <div class="col-lg-6 mb-4">
                <div id="list_container_1"></div>
            </div>
            <div class="col-lg-6 mb-4">
                <div id="list_container_2"></div>
            </div>
        </div>
    </div>

    <!-- M2M Widget Table Template -->
    <div t-name='purchase_m2mWidgetTable' class="o_form_view">
        <table class="o_group o_inner_group">
            <tr t-foreach="fields" t-as="field">
                <td t-att-id="field + '_field'" style="min-width:200px;"/>
            </tr>
        </table>
    </div>

    <!-- Drill Down Dialog Template -->
    <div t-name="purchase_dashboard.DrillDownDialog">
        <div class="drill-down-content">
            <p class="mb-3">
                <strong>Total Records: </strong>
                <span t-esc="orders_count"/> purchase orders found
            </p>
            
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Order #</th>
                            <th>Vendor</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Lines</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="orders" t-as="order">
                            <td>
                                <a href="#" class="order-link text-primary" 
                                   t-att-data-order-id="order.id">
                                    <t t-esc="order.name"/>
                                </a>
                            </td>
                            <td><t t-esc="order.partner_name"/></td>
                            <td><t t-esc="order.date_order"/></td>
                            <td>
                                <t t-esc="order.currency"/><t t-esc="order.amount_total"/>
                            </td>
                            <td>
                                <span t-att-class="'badge badge-' + (order.state == 'done' ? 'success' : 'primary')">
                                    <t t-esc="order.state"/>
                                </span>
                            </td>
                            <td><t t-esc="order.order_lines_count"/> lines</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <t t-if="orders_count == 0">
                <div class="alert alert-info">
                    No purchase orders found for this selection.
                </div>
            </t>
        </div>
    </div>
</templates>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="legal_case_type_form" model="ir.ui.view">
            <field name="name">Tags</field>
            <field name="model">legal.case.type</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="legal_case_type_tree" model="ir.ui.view">
            <field name="name">Tags</field>
            <field name="model">legal.case.type</field>
            <field name="arch" type="xml">
                <tree string="Tags">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="legal_case_type_search" model="ir.ui.view">
            <field name="name">legal.case.type.search</field>
            <field name="model">legal.case.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="eps_legal_case_type_action">
            <field name="name">Tags</field>
            <field name="res_model">legal.case.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="legal_case_type_menuitem" name="Tags" parent="menu_legal_case_configuration" action="eps_legal_case_type_action" sequence="3"/>

    </data>
</odoo>
